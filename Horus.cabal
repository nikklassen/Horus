name:                Horus
version:             0.1.0.0
homepage:            http://github.com/nikklassen/Horus
author:              Nik Klassen
build-type:          Simple
cabal-version:       >=1.22

executable Horus
  default-language:    Haskell2010
  main-is:             api/Server.hs
  other-extensions:    DeriveDataTypeable,
                       DeriveGeneric,
                       DoAndIfThenElse,
                       OverloadedStrings,
                       PatternSynonyms,
                       QuasiQuotes,
                       RecordWildCards,
                       ScopedTypeVariables,
                       TemplateHaskell,
                       TypeFamilies
  build-depends:       HUnit,
                       acid-state ==0.14.*,
                       aeson,
                       base,
                       bytestring,
                       containers,
                       happstack-server,
                       mtl ==2.2.1,
                       numbers,
                       parsec,
                       safecopy >=0.6,
                       syb,
                       system-uuid,
                       template-haskell,
                       test-framework,
                       test-framework-hunit,
                       testpack ==2.1.3.*,
                       text,
                       transformers
